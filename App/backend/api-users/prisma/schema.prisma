generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int     @id @default(autoincrement())
  firstname     String
  lastname      String
  email         String  @unique
  password      String
  currentWeight Float
  height        Int
  active        Int
  bloodPressure String?
  weightGoal    Float
  isVerified    Boolean @default(false)
  token         String?
  gender        Gender  @default(MALE)
}

enum Gender {
  MALE
  FEMALE
}
